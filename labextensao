-- Criação do banco de dados
CREATE DATABASE empresa_ti;

-- Conectando ao banco de dados
\c empresa_ti;

-- Tabela de Clientes
CREATE TABLE Clientes (
    ClienteID SERIAL PRIMARY KEY,
    Nome VARCHAR(100) NOT NULL,
    Email VARCHAR(100),
    Telefone VARCHAR(20)
);

-- Tabela de Funcionários
CREATE TABLE Funcionarios (
    FuncionarioID SERIAL PRIMARY KEY,
    Nome VARCHAR(100) NOT NULL,
    Cargo VARCHAR(100),
    Email VARCHAR(100),
    Telefone VARCHAR(20),
    DataContratacao DATE
);

-- Tabela de Projetos
CREATE TABLE Projetos (
    ProjetoID SERIAL PRIMARY KEY,
    Nome VARCHAR(100) NOT NULL,
    Descricao TEXT,
    DataInicio DATE,
    DataFim DATE,
    Status VARCHAR(20),
    ClienteID INT REFERENCES Clientes(ClienteID)
);

-- Tabela de Tickets de Suporte
CREATE TABLE Tickets (
    TicketID SERIAL PRIMARY KEY,
    Titulo VARCHAR(100) NOT NULL,
    Descricao TEXT,
    DataAbertura TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    Status VARCHAR(20),
    Prioridade VARCHAR(20),
    FuncionarioResponsavelID INT REFERENCES Funcionarios(FuncionarioID),
    ClienteID INT REFERENCES Clientes(ClienteID)
);

